{% extends 'base.html.twig' %}

{% block title %}Médicament{% endblock %}

{% block body %}
    <h1>Médicament</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ drug.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ drug.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class = "btn btn-info" href="{{ path('drug_index') }}">Retour</a>

    <a class = "btn btn-warning" href="{{ path('drug_edit', {'id': drug.id}) }}">Editer</a>

    {{ include('drug/_delete_form.html.twig') }}
{% endblock %}
