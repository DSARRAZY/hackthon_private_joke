<form method="post" action="{{ path('prescription_delete', {'id': prescription.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette prescription ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prescription.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
