{% extends 'base.html.twig' %}

{% block title %}Prescription{% endblock %}

{% block body %}
    <h1>{{ prescription.patient.name }}</h1>

    <table class="table">
        <tbody>
        {% for drug in drugs %}
        <tr>
            <th>Drugs</th>
            <td>{{ drug.name }}</td>
        </tr>
        {% endfor %}
        <tr>
            <th>Posologie</th>
            <td>{{ prescription.dosage }}</td>
        </tr>
        <tr>
            <th>Durée</th>
            <td>{{ prescription.duration }} jours</td>
        </tr>
        <tr>
            <th>Date de début du traitement</th>
            <td>{{ prescription.beginningOfTreatment ? prescription.beginningOfTreatment|date('d-m-Y') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1">
           MATIN
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1">
            MIDI
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1">
            SOIR
        </label>
    </div>

    <button type="button" class="btn btn-primary btn-lg">SMS de rappel</button>
    <button type="button" class="btn btn-secondary btn-lg">Mail de rappel</button>
    <a class="btn btn-success btn-lg" href="https://meet.google.com/bqg-onur-rqc" target="_blank">Visio</a>

    <a class="btn btn-warning" href="{{ path('prescription_edit', {'id': prescription.id}) }}">Editer</a>
    <a class="btn btn-light" href="{{ path('patient_show', {'id': patient.id}) }}">Fiche patient</a>

    {{ include('prescription/_delete_form.html.twig') }}
{% endblock %}
